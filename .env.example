# MIRRORLOOP Environment Variables
# Copy this file to .env and fill in your actual values

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Supabase Database
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Typebot Integration
TYPEBOT_URL=https://your_typebot_instance.com
TYPEBOT_API_TOKEN=your_typebot_api_token
USE_TYPEBOT=true

# User ID Anonymization (for privacy)
USER_ID_SALT=your_secure_random_salt

# Test Accounts (unlimited usage)
TEST_USER_ID_1=your_test_line_user_id
TEST_USER_ID_2=additional_test_user_id